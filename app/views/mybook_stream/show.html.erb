
<%= form_tag mybook_stream_saveidea_path, :method=>:post do%>

	<%= label :idea, :book_id,"id"%>
        <%= text_field :idea, :book_id, :value=>@id%>

	<%= label :idea, :user_id,"user_id"%>
        <%= text_field :idea, :user_id, :value=>current_user.id%>

	<%= label :idea, :process,"process"%>
        <%= text_field :idea, :process, :value=>20%>

        <%= label :idea, :idea,"idea"%>
        <%= text_field :idea, :idea, :value=>"enter idea here"%>
         <%= submit_tag 'submit'%>
<% end%>
